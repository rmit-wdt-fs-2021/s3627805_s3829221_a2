
@{
    ViewData["Title"] = "BillPay";
}

<form asp-controller="Customer" asp-action="ATMAction">
    @*Transaction Type*@
    @{
        List<Account> Accounts = new List<Account>();
        List<Payee> Payees = new List<Payee>();
    }
    @*From Account*@
    <div class="form-group row">
        <label for="fromAccount" class="col-sm-2 col-form-label">Transaction Type</label>
        <div class="col-sm-10">
            <div class="form-group">
                <select class="form-control" id="fromAccount" name="fromAccount">
                    <option value="" disabled selected>Select your option</option>
                    @foreach (Account accout in Accounts)
                    {
                        <option value=@accout.AccountNumber> @Html.DisplayFor(x => accout.AccountNumber)</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label for="toPayee" class="col-sm-2 col-form-label"> Account </label>
        <div class="col-sm-10">
            <div class="form-group">
                <select class="form-control" id="toPayee" name="toPayee">
                    <option value="" disabled selected>Select your option</option>
                    @{
                        foreach (Payee payee in Payees)
                        {
                            <option value=@payee.PayeeID> @Html.DisplayFor(x => payee.PayeeID + " " + payee.PayeeName) </option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    @*Amount*@
    <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
            <div class="form-group">
                <input type="number" class="form-control" id="amount" name="amount">
            </div>
        </div>
    </div>

    @*To Account*@
    <div class="form-group row">
        <label for="destAccount" class="col-sm-2 col-form-label">Destination account</label>
        <div class="col-sm-10">
            <div class="form-group">
                <>
            </div>
        </div>
    </div>

    @*Date picker*@
    <div class="control-group">
        <label class="control-label">Date Picking</label>
        <div class="controls input-append date form_date" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
            <input size="16" type="text" value="" readonly>
            <span class="add-on"><i class="icon-remove"></i></span>
            <span class="add-on"><i class="icon-th"></i></span>
        </div>
        <input type="hidden" id="scheduledDate" name="scheduledDate" value="" /><br />
    </div>
    
    @*Period*@
    <div class="form-group row">
        <label for="toPayee" class="col-sm-2 col-form-label"> Account </label>
        <div class="col-sm-10">
            <div class="form-group">
                <select class="form-control" id="toPayee" name="toPayee">
                    <option value="" disabled selected>Select your option</option>
                    <option value=@Period.Monthly >@Html.DisplayFor(x => "Monthly")</option>
                    <option value=@Period.Quarterly>@Html.DisplayFor(x => "Quarterly")</option>
                    <option value=@Period.OnceOff>@Html.DisplayFor(x => "OnceOff")</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
<h1>BillPay</h1>



@model List<Account>
@using System.Collections.Generic

<h1>Select bill pay account</h1>

<form asp-action="DisplayBillPays" asp-controller="Customer">
    <div class="form-group row">
        <label for="account" class="col-sm-2 col-form-label">Select your account </label>
        <div class="col-sm-10">
            <div class="form-group">
                <select class="form-control" id="accountNumber" name="accountID" onchange="this.form.submit()">
                    <option value="" disabled selected>Select your option</option>
                    @foreach (Account account in Model)
                    {
                        <option value=@account.AccountNumber>

                            @{
                                var accountString = "Account: " + account.AccountNumber + "  ";
                                var balanceString = "Balance: " + account.GetBalance();
                                @Html.DisplayFor(x => accountString) @Html.DisplayFor(x => balanceString)
                            }
                        </option>
                    }
                </select>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>
